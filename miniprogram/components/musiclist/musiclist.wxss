.musiclist-container {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;
}

.musiclist-index {
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
}

.musiclist-info {
  flex-grow: 1;
  width: 0; /* 这样按照flex分发的宽度 */
}

.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musiclist-singer {
  font-size: 20rpx;
  color: #888;
}

.playing .musiclist-index,
.playing .musiclist-alia,
.playing .musiclist-singer,
.playing .musiclist-name {
  color: #fd999a;
}
