@import "../../iconfont.wxss";

.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  margin-right: 20rpx;
}

.in-bar {
  color: #999;
}

.search {
  background: #fd999a;
  color: #fff;
  font-size: 24rpx;
  padding: 14rpx 16rpx;
  width: 120rpx !important;
}

.search-icon{
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}
